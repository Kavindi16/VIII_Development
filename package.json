{
  "name": "software-testing-assignment",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "mocha --require @babel/register",
    "coverage": "nyc --reporter=text --reporter=lcov mocha --require @babel/register"
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js",
      "node_modules"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": true
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/register": "^7.28.3",
    "babel-plugin-istanbul": "^7.0.1",
    "chai": "^6.2.1",
    "coveralls": "^3.1.1",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0"
  },
  "license": "MIT"
}
